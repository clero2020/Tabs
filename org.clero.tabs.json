{
    "id" : "org.clero.tabs",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "command" : "tabs",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
	    {
		"name": "tabs",
		"builddir": true,
		"buildsystem": "meson",
		"sources": [
		    {
		        "type": "git",
		        "url": "file:///var/home/clero/Projects/Tabs"
		    }
		]
	    },
	    {
		"name": "tabs-icons",
		"buildsystem": "simple",
		"build-commands": [
		    "mkdir -p ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/",
		    "install -Dm644 data/icons/hicolor/scalable/apps/org.clero.tabs.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/",
		    "mkdir -p ${FLATPAK_DEST}/share/icons/hicolor/symbolic/apps/",
		    "install -Dm644 data/icons/hicolor/symbolic/apps/org.clero.tabs-symbolic.svg ${FLATPAK_DEST}/share/icons/hicolor/symbolic/apps/",
		    "install -Dm644 data/org.clero.tabs.desktop.in ${FLATPAK_DEST}/share/applications/"
		],
		"sources": [
		    { "type": "file", "path": "org.clero.tabs.svg" },
		    { "type": "file", "path": "org.clero.tabs-symbolic.svg" },
		    { "type": "file", "path": "org.clero.tabs.desktop" }
		]
	    }
	]

}
